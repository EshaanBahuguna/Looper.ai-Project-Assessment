<%- include('./partials/header'); -%>

<div class="mx-auto" style="width: 30rem; margin-top: 16rem;">
    <div class="card p-3">
        <h2 class="text-center">Sign-up Form</h2>
        <form>
            <div class="container my-3 px-0">
                <div class="row">
                    <div class="col">
                        <label for="first-name" class="mb-2">First Name</label>
                        <input type="text" name="firstname" id="first-name" class="form-control">
                    </div>
                    <div class="col">
                        <label for="last-name" class="mb-2">Last Name</label>
                        <input type="text" name="lastname" id="last-name" class="form-control">
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="user-id" class="mb-2">Upload ID <span class="fst-italic fw-light">(less than 16MB)</span></label>
                <input type="file" name="userId" id="user-id" class="form-control" accept=".jpeg, .png, .jpg">
            </div>
            <div class="mb-3">
                <label for="mobile-number" class="mb-2">Mobile Number </label>
                <input type="number" name="mobileNumber" id="mobile-number" class="form-control">
            </div>
            <div class="mb-3">
                <label for="email-id" class="mb-2">Email Address <span class="text-red">*</span></label>
                <input type="text" name="email" id="email-id" class="form-control">
            </div>
            <div class="mb-3">
                <label for="password" class="mb-2">Password <span class="text-red">*</span></label>
                <input type="password" name="password" id="password" class="form-control">
            </div>
            <div class="mb-3">
                <label for="check-password" class="mb-2">Enter Password Again <span class="text-red">*</span></label>
                <input type="password" name="checkPassword" id="check-password" class="form-control">
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success mx-auto">Sign-Up</button>
            </div>
        </form>
    </div>
    <div id="alert-box"></div>
</div>
<script src="/sign-up.js"></script>
<%- include('./partials/footer'); -%>