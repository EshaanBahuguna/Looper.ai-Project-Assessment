<%- include('./partials/header'); -%>

<div class="mx-auto p-2" style="width: 100rem; margin-top: 8rem;">
    <input type="hidden" id="user-id" value="<%= userId %>">
    <nav class="row mb-4">
        <div class="col text-center">
            <a class="fs-3 fw-semibold btn btn-primary" id="user-books">My Books</a>
        </div>
        <div class="col-8 d-flex justify-content-center position-relative">
            <input type="text" id="search-bar" class="py-2 form-control text-bg-light px-3" style="width: 50rem;">
            <i class="fa-solid fa-2x fa-magnifying-glass position-absolute" style="right: 150px; top: 8px"></i>
        </div>
        <div class="col text-center">
            <a class="fs-3 fw-semibold btn btn-success" id="all-books">All Books</a>
        </div>
    </nav>
    <div class="card">
        <div class="container" style="max-width: 1520px; padding-left: 0;">
            <div class="row">
                <!-- User Details -->
                <div class="col-4 px-0 pt-4 d-flex flex-column align-items-center text-center position-relative" id="user-details">
                    <h2><%= userDetails.firstname %> <%= userDetails.lastname %> </h2>
                    <div class="card my-4 " style="width: 20rem">
                        <div class="card-header fw-bold">Favourite Books</div>
                        <ul class="list-group list-group-flush">
                            <% userDetails.favouriteBooks.forEach((book)=>{ %>
                                <li class="list-group-item"><%= book.name %></li>
                            <% }) %>
                        </ul>
                    </div>
                    <button class="btn btn-success mb-3" id="update-details-button">Update Details</button>
                    <button class="btn btn-primary" id="add-book-button">Add Book</button>
                    <p class="mt-2 fw-semibold">Number of Issued Books: <span class="fw-bold"><%= userDetails.issuedBooks.length %></span></p>

                    <div class="row mt-2">
                        <div class="text-danger fw-semibold">
                            <ul class="position-relative"  style="list-style: none;">
                                <li class="position-absolute" style="left: -200px; top: -20px"><a id="remove-users-button">Remove Users</a> </li>
                                <li class="position-absolute" style="right: -180px; top: -20px"><a id="remove-books-button">Remove Books</a> </li>
                            </ul>
                        </div>
                    </div>
                    <div class="d-flex" style="height: 100%">
                        <div class="vr position-absolute" style="right: 0; bottom: 0; height: 100%"></div>
                    </div>
                </div>
                <div class="col-8 py-4" id="output-section" >
                    <div class="row mb-3">
                        <h3 class="fw-semibold mx-3">My Books</h3>
                    </div>
                    <div class="row" id="output-results" style="padding-left: 2rem;">
                        <!-- Section where output of various things will be displayed -->
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>
<script src="/home.js"></script>

<%- include('./partials/footer'); -%>

